{
  "mcpServers": {
    "chainvue": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "${CHAINVUE_MCP_URL:-https://mcp.chainvue.io/sse}",
        "--allow-http"
      ],
      "env": {
        "NODE_NO_WARNINGS": "1"
      }
    },
    "signer": {
      "command": "npx",
      "args": ["--yes", "github:chainvue/chainvue-signer"],
      "env": {
        "NODE_NO_WARNINGS": "1"
      }
    }
  }
}
